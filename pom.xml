		<version>3.2.5</version>
	</parent>

	<groupId>com.newestworld</groupId>
	<artifactId>root</artifactId>
	<packaging>pom</packaging>
	<version>0.1</version>
	<modules>
		<module>libs/commons</module>
		<module>libs/streams</module>
		<module>libs/test</module>
